<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#757C88"
        tools:context=".MainActivity">

    

        >

        <TextView
                android:text="Quote Of The Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textStyle="bold"
        />
    

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quotes will be displayed here"
            android:id="@+id/quoteTextView"
            android:textStyle="bold"
            android:textSize="28dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:background="@drawable/rounded_corner"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/btnNextQuote"

        android:layout_centerHorizontal="true"
        android:id="@+id/LayoutButton"
        >

        <Button
                android:text="Add Favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/btnAddFavorite"
                android:layout_below="@+id/quoteTextView"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:textColor="#000302"
                android:background="@drawable/rounded_button"
        />
        <Button
                android:text="Share Quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/btnShareQuote"
                android:layout_centerInParent="true"
                android:layout_below="@id/quoteTextView"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:background="@drawable/rounded_button"

        />
        <Button
                android:text="Favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/btnFavoritesList"
                android:layout_alignParentRight="true"
                android:layout_below="@id/quoteTextView"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:background="@drawable/rounded_button"
        />

    </LinearLayout>
    <Button
            android:text="next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnNextQuote"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:background="@drawable/rounded_button"
    />

</RelativeLayout>
